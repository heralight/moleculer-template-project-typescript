{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "start": "moleculer-runner services"{{#jest}},
    "ci": "jest --watch",
    "test": "jest --coverage"{{/jest}}{{#lint}},
    "lint": "tslint -p tsconfig.json"{{/lint}}
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.23",
    "@types/node": "^10.9.2",
    {{#lint}}
    "tslint": "^5.11.0",
    {{/lint}}
    {{#jest}}
    "@types/chai": "^4.1.6",
    "@types/jest": "^23.3.3",
    "@types/mocha": "^5.2.5",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "ts-jest": "^23.10.4",
    {{/jest}}
    "moleculer-repl": "^0.5.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    {{#apiGW}}
    "moleculer-web": "^0.8.0",
    {{/apiGW}}
    {{#if_eq transporter "NATS"}}
    "nats": "^1.0.0",
    {{/if_eq}}
    {{#if_eq transporter "MQTT"}}
    "mqtt": "^2.18.2",
    {{/if_eq}}
    {{#if_eq transporter "AMQP"}}
    "amqplib": "^0.5.2",
    {{/if_eq}}    
    {{#if_eq transporter "STAN"}}
    "node-nats-streaming": "0.0.40",
    {{/if_eq}}    
    {{#if_eq transporter "Kafka"}}
    "kafka-node": "2.6.1",
    {{/if_eq}}    
    {{#redis}}
    "ioredis": "^3.2.2",
    {{/redis}}
    "moleculer": "^0.13.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  }
}
